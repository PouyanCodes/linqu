@page
@model linqu.Web.Pages.UserPanel.Links.CreateLinkModel
@{
    Layout = "Layouts/_UserPanelLayout";
    ViewData["Title"] = "پنل کاربری - افزودن لینک جدید";
}


<div class="card border-0 rounded shadow">
    <div class="card-body">
        <h5 class="text-center text-primary">جزئیات لینک </h5>
        <form method="post">
            <div class="row mt-4">
                <div class="col-12">
                    <div class="mb-3">
                        <label class="form-label"> عنوان لینک</label>
                        <div class="form-icon position-relative">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-bookmark fea icon-sm icons"><path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path></svg>
                            <input asp-for="NewLink.LinkTitle" type="text" class="form-control ps-5" placeholder="عنوان لینک :">
                            <span asp-validation-for="NewLink.LinkTitle" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="mb-3">
                        <label class="form-label"> آدرس سایت:</label>
                        <div class="form-icon position-relative">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe fea icon-sm icons"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>
                            <input asp-for="NewLink.LinkAddress" type="url" class="form-control ps-5" placeholder="آدرس: " required>
                            <span asp-validation-for="NewLink.LinkAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="mb-3">
                        <label class="form-label">توضیحات </label>
                        <div class="form-icon position-relative">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-message-circle fea icon-sm icons"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path></svg>
                            <textarea asp-for="NewLink.Description" rows="4" class="form-control ps-5" placeholder="توضیحات :"></textarea>
                            <span asp-validation-for="NewLink.Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <input type="submit" class="btn btn-primary" value="ایجاد لینک">
                </div>
            </div>
        </form>
    </div>
</div>




