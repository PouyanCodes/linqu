
<!--========= Profile Header Start =========-->

@using linqu.Core.Security
@using linqu.Core.Interfaces
@inject IUserService _userService;
@inject IRoleService _roleService;

<section class="bg-profile d-table w-100 bg-primary" style="background: url('WebContentimages/account/bg.png') center center;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card public-profile border-0 rounded shadow" style="z-index: 1;">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-lg-2 col-md-3 text-md-start text-center">
                                <img src="~/img/UserAvatar/@_userService.GetUserAvatarById(User.Identity.GetUserId())" class="avatar avatar-large rounded-circle shadow d-block mx-auto" alt="AvatarProfileHeader">
                            </div>
                            <div class="col-lg-10 col-md-9">
                                <div class="row align-items-end">
                                    <div class="col-md-7 text-md-start text-center mt-4 mt-sm-0">
                                        <h3 class="title mb-0">@_userService.GetFullNameById(User.Identity.GetUserId())</h3>
                                        <small class="text-muted h6 me-2">@_roleService.GetRoleTitleById(User.Identity.GetUserRoleId())</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!--========= Profile Header End =========-->