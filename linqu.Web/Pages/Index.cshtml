@page
@model IndexModel
@{
    ViewData["Title"] = "صفحه ی اصلی";
}

<section class="bg-half-170 d-table w-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="title-heading mt-4">
                    <h1 class="display-4 fw-bold mb-3">کوتاه کردن لینک <br> به راحتی آب خوردن !</h1>
                    <p class="para-desc text-muted">
                        طراحی روان ، قوی و دوست داشتنی برای وب مستران عزیز
                        <i class="mdi mdi-heart text-danger"></i>
                    </p>
                </div>
                <div class="subcribe-form mt-4 pt-2">

                    <form method="post">
                        <input asp-for="NewLink.LinkAddress" type="url" class="border bg-white rounded-pill" required placeholder="لینک خود را وارد کنید ..">
                        <button type="submit" class="btn btn-pills btn-primary">کوتاه کن</button>
                        <span asp-validation-for="NewLink.LinkAddress" class="text-danger mt-1"></span>
                    </form>

                </div>
            </div>
            <div class="col-md-6">
                <img src="~/WebContent/images/illustrator/Creativity-bro.svg">
            </div>
        </div>
    </div>
</section>

<div class="position-relative">
    <div class="shape overflow-hidden text-light">
        <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
        </svg>
    </div>
</div>

