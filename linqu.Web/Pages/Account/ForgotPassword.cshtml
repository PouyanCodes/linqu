@page
@model linqu.Web.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "بازیابی کلمه عبور";
}


<section class="bg-home d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 col-md-6">
                <div class="me-lg-5">
                    <img src="~/WebContent/images/user/recovery.svg" class="img-fluid d-block mx-auto" alt="Account recovery Logo">
                </div>
            </div>
            <div class="col-lg-5 col-md-6">
                <div class="card shadow rounded border-0">
                    <div class="card-body">
                        <h4 class="card-title text-center"> بازیابی حساب </h4>
                        <form method="post" class="login-form mt-4">
                            <div class="row">
                                <div class="col-lg-12">
                                    <p class="text-muted">لطفا آدرس ایمیل خود را وارد کنید تا لینک بازیابی کلمه عبور برای شما ارسال می گردد.</p>
                                    <div class="mb-3">
                                        <label class="form-label">آدرس ایمیل <span class="text-danger">*</span></label>
                                        <div class="form-icon position-relative">
                                            <i data-feather="mail" class="fea icon-sm icons"></i>
                                            <input asp-for="Forgot.Email" type="email" class="form-control ps-5" placeholder="آدرس ایمیل خود را وارد کنید">
                                            <span asp-validation-for="Forgot.Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="d-grid">
                                        <button class="btn btn-primary">ارسال </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>